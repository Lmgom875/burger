<div class="container">
    <div class="row justify-content-center align-middle" id="title-row">

        <div class="col-2 text-center div-burger-img"><img src="../assets/img/hiclipart.com.png" class="burger-img"
                id="burger-img-left" alt="burger">
        </div>
        <div class="col-8 text-center div-burger-text">
            <h1 id="title-text">HAMBURGERS!</h1>
        </div>
        <div class="col-2 text-center div-burger-img"><img src="../assets/img/hiclipart.com.png" class="burger-img"
                id="burger-img-right" alt="burger">
        </div>




    </div>

    <div class="row d-flex justify-content-around">
        <div class="col-5" id="devour-col">
            <h4 class="status-title">DEVOUR THEM ALL!!!</h4>
            <ul class="list-group">
                <!--Handlebars for cicle  -->
                {{#each burger}}
                <!--Handlebars not if  -->
                {{#unless devoured}}
                <li class="list-group-item">
                    <!--Handlebars variable (inside the array from DB)  -->
                    {{burger_name}}
                    <!--Handlebars this with variable id from the array DB  -->
                    <button class="btn btn-primary float-right eat-burger" data-id="{{this.id}}">EAT!</button>
                </li>
                <!--Handlebars not if close  -->
                {{/unless}}
                <!--Handlebars for cycle close  -->
                {{/each}}
            </ul>
        </div>

        <div class="col-5" id="devoured-col">
            <h4 class="status-title">DEVOURED!!!</h4>
            <ul class="list-group" id="list-group-devoured">
                <!--Handlebars for cycle  -->
                {{#each burger}}
                <!--Handlebars if  -->
                {{#if devoured}}
                <li class="list-group-item list-group-item-light" id="list-group-item-devoured">
                    {{burger_name}}
                    <button class="btn btn-primary float-right delete-burger" data-id="{{this.id}}">DELETE</button>
                </li>
                <!--Handlebars if close  -->
                {{/if}}
                <!--Handlebars for cycle close  -->
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row d-flex justify-content-center" id="create-row">
        <div class="col-12 text-center">
            <h2 id="create-text">CREATE YOU OWN HAMBURGER</h2>
        </div>

        <div class="col text-center">
            <form class="create-form">
                <div class="form-group">
                    <label class="input-text" for="ca">Hamburger Name:</label>
                    <input class="input-text" type="text" id="burger" name="name">
                    <button class="input-text" type="submit">Add Burger</button>
                </div>
            </form>
        </div>
    </div>